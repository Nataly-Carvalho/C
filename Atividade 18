// Calcular taxa e valor pago em uma estadia de hotel//

#include "stdio.h"
#include <math.h>

int main(void)
{
int TDiarias;
float TaxaA, TaxaB, TaxaC, diarias = 50.00, Total;
char nome[30];
TaxaA = 10.00 ;
TaxaB = 15.30;
TaxaC = 8.50;


printf("\nDigite seu nome: ");
  
scanf("%s", &nome);
  
printf("\nDigite quantos dias você vai ficar no hotel: ");
scanf("%d",&TDiarias);
 Total =TDiarias * diarias;
  
if (TDiarias<15)
{ printf("sua taxa é de:\n %.2f", TaxaB);}
  

if (TDiarias == 15)

{ printf("sua taxa é de:\n %.2f", TaxaA);}
  
  
if (TDiarias >15)

{ printf("sua taxa é de:\n %.2f", TaxaC);}

Total = diarias * TDiarias;
  
printf("\nVocê ficou no hotel %d  Dias, \nO total da sua estadia ficou: %.2f Reais", TDiarias, Total);
  

return 0;
  
  }
